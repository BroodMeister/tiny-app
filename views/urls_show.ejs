<link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet" type="text/css">

<!DOCTYPE html>
<html lang="en">
  <head>
    <title>TinyApp-ShowURL</title>
    <style>
      body {
        background-color: #E6E6FA;
      }
      h1 {
        font-family: Lobster;
        color: #ADFF2F;
      }
    </style>
  </head>
  <body style="margin-left:50px; margin-right:50px;">
    <header align="right">
      <% include ./partials/_header %>
    </header>
    <div style="margin:30px;">
      <h1 style="font-size:36px;">
        ShortURL: <b><%=shortUrl%></b>
      </h1>
      <form action="/urls/<%=shortUrl%>" method="POST" style="font-size:18px; width:300px;">
        <input name="newURL" type="text" value="<%=url%>">
        <input type="submit" value="Update">
      </form>
    </div>
  </body>
</html>