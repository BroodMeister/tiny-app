<link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet" type="text/css">

<!DOCTYPE html>
<html lang="en">
  <head>
    <title>TinyApp-Index</title>
    <style>
      body {
        background-color: #E6E6FA;
      }
      h1 {
        font-family: Lobster;
        color: #ADFF2F;
      }
    </style>
  </head>
  <body style="margin-left:50px; margin-right:50px;">
    <header align="right">
      <% include ./partials/_header %>
    </header>
    <h1>URL Index</h1>
    <a href="/urls/new">Create a New Short Link</a>
    <table style="margin:50px;">
      <% for (var url in urls) { %>
          <tr style="height:30px;">
            <form action="/urls/<%=url%>/delete" method="POST">
              <td><%=url%></td>
              <td>&rarr;</td>
              <td style="width:250px;">
                <a href="<%=urls[url].url%>"><%=urls[url].url%></a>
              </td>
              <td style="width:50px;">
                <a href="/urls/<%=url%>">Edit</a>
              </td>
              <td>
                <button>Delete<img src="http://icons.iconarchive.com/icons/franksouza183/fs/256/Places-trash-full-icon.png" width="20" height="20"></button>
              </td>
            </form>
          </tr>
      <% } %>
    </table>
  </body>
</html>